{
  "name": "svg-filter-factory",
  "version": "1.0.0",
  "description": "SVG Filter Factory - A library for registering and applying SVG filters",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter core dev\" \"pnpm --filter demo dev\"",
    "dev:core": "pnpm --filter core dev",
    "dev:demo": "pnpm --filter demo dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
